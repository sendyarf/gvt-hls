{
    "functions": {
      "api/proxy.js": {
        "runtime": "edge"
      }
    },
    "rewrites": [
      {
        "source": "/proxy/(.*)",
        "destination": "/api/proxy?path=$1"
      }
    ],
    "headers": [
      {
        "source": "/api/(.*)",
        "headers": [
          {
            "key": "Access-Control-Allow-Origin",
            "value": "*"
          },
          {
            "key": "Access-Control-Allow-Methods",
            "value": "GET, HEAD, OPTIONS"
          },
          {
            "key": "Access-Control-Allow-Headers",
            "value": "Content-Type, User-Agent, Range, If-None-Match, X-Target-Domain"
          }
        ]
      }
    ]
  }